<body>
    <h1>RECIPES!! </h1>
    <% if(recipes.length===0) {%>
        <h2>There are no recipes yet!</h2>
        <a href="/recipe/new">Create one now!</a>
        <% } else { %>
            <ul class="recipes">
                <% recipes.forEach((recipe)=>{ %>
                    <li><a href="/recipe/<%=recipe._id%>">
                            <%= recipe.name %>
                        </a></li>
                    <% }) %>
            </ul>
            <% } %>
                <a href="/recipe/new">Create one now!</a>
</body>

</html>